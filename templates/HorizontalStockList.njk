

{% macro render(num="1") %}
  <p class="jast-hticker jast-ticker-no{{ num }}">
    <span class="jast-tickerframe">
    {% for stock in stocks %}
      <span class="jast-stock">{{ stock.meta.name }}:
        {% if utils.getStockChange(stock) > 0 %}
          {% set colorClass = "high" %}
        {% elif utils.getStockChange(stock) < 0 %}
          {% set colorClass = "low " %}
        {% else %}
          {% set colorClass = "" %}
        {% endif %}
        <span class="{{ colorClass }}">
          {{ utils.getCurrentValue(stock) }}
          {{ utils.getCurrency(stock) }}
          {% if colorClass %}
            ({{ utils.getStockChange(stock) }}%)
          {% endif %}
        </span>
      </span>
    {% endfor %}
    {% if config.showDepotGrowth %}
      {% set depotGrowth = utils.getDepotGrowth(config, stocks) %}
      {% for growth in depotGrowth %}
        {% if growth.value > 0 %}
          {% set colorClass = "high" %}
        {% elif growth.value < 0 %}
          {% set colorClass = "low " %}
        {% else %}
          {% set colorClass = "" %}
        {% endif %}
      
        <span class="jast-stock">{{ "depotGrowth" | translate | safe }}
          <span class="{{ colorClass }}">{{ growth.value }} {{ growth.currency }}</span>
        </span>
      {% endfor %}
    {% endif %}
    </span>
  </p>
{% endmacro %}
