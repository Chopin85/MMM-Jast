{% macro render(config) %}
  <style type="text/css">
    .jast-wrapper.horizontal ul {
      animation: tickerh {{ config.fadeSpeedInSeconds }}s linear infinite;
    }

    .jast-wrapper.horizontal ul.second {
      animation-delay: -{{ config.fadeSpeedInSeconds / 2 }}s;
    }
  </style>
{% endmacro %}
